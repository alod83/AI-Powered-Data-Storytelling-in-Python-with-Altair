{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic line chart",
  "width": 400,
  "height": 200,
  "padding": 5,

  "data": [
    {
      "name": "mydata",
      "url": "https://raw.githubusercontent.com/alod83/Data-Storytelling-with-Python-Altair-and-GitHub-Copilot/main/03/data/data.csv", "format": {"type": "csv"}
    }
  ],

  "scales": [
    {
      "name": "xscale",
      "domain": {"data": "mydata", "field": "X"},
      "range": "width"
    },
    {
      "name": "yscale",
      "domain": {"data": "mydata", "field": "Y"},
      "range": "height"
    }
  ],

  "axes": [
    { "orient": "bottom", "scale": "xscale" },
    { "orient": "left", "scale": "yscale" }
  ],

  "marks": [
    {
      "type": "line",
      "from": {"data":"mydata"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "X"},
          "y": {"scale": "yscale", "field": "Y"},
          "stroke": { "value": "#636466"}
          
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data":"mydata"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "X"},
          "y": {"scale": "yscale", "field": "Y"},
          "shape": {"value": "circle"},
          "size" : {"value": 100},
          "fill": { "value": "#636466"}
        }
      }
    }
  ]
  }  